# Redirect www to non-www
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.oguzhanbilgin\.com$ [NC]
RewriteRule ^(.*)$ https://oguzhanbilgin.com/$1 [R=301,L]

# Fix image path issues
RewriteRule ^images//assets/images/(.*)$ /assets/images/$1 [R=301,L]
RewriteRule ^images/assets/images/(.*)$ /assets/images/$1 [R=301,L]

# SPA Routes - serve index.html for client-side routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(Developer|developer|IvyMontgomery|AtletikBezelye)/?$ index.html [L]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
